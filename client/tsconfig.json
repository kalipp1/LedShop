{
    "compilerOptions": {
      "allowJs": true,             
      "checkJs": false,            
      "jsx": "react-jsx",          
      "module": "ESNext",          
      "moduleResolution": "node",
      "target": "ES2020",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "./src"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": ["node_modules", "dist"]
  }